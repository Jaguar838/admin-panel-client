{
  "singleQuote": true,
  "trailingComma": "none",
  "tabWidth": 2,
  "semi": false,
  "useTabs": true,
  "arrowParens": "avoid",
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@components/(.*)$",
    "^@screens/(.*)$",
    "^@ui/(.*)$",
    "^@hooks/(.*)$",
    "^@shared/(.*)$",
    "^@services/(.*)$",
    "^@assets/(.*)$",
    "^@utils/(.*)$",
    "^@config/(.*)$",
    "^[./]",
  "(.scss)$"
],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
